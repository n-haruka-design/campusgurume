  <div class="field">
    <%= f.label :レビュー %>
    <%= f.text_field :about, :size => 30 %>
  </div>


  <h5 class="rating-title">総合評価</h5>
<div class="post_form">
  <%= f.radio_button :star, 5, id: 'star1' %>
