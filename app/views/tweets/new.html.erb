  <%= f.radio_button :star, 1, id: 'star5' %>
  <label for="star5">★</label>
</div>


  <div class="field">
    <%= f.label :おすすめメニュー %>
    <%= f.text_field :menu, :size => 30 %>
  </div>
 <%= f.submit "ごはんレビューを投稿する", class: 'button'%>
 </div>
 <% end %>
 </div>

<%= link_to "TOPに戻る", tweets_path, class: 'button' %>

</div>








